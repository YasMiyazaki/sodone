<div class="content col-sm-9 col-md-6" id="login">

<p><%=t :login %></p>
<%= form_for(:session, url: login_path) do |f| %>
  <div class="form-group row">
    <%= f.label :email, (t :email), class: "col-sm-4 col-form-label"%>
    <div class="col-sm-5">
    <%= f.email_field :email, class: 'form-control', :placeholder => "Email Address" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :password, (t :password), class: "col-sm-4 col-form-label" %>
    <div class="col-sm-5">
    <%= f.password_field :password, class: 'form-control', :placeholder => "Password"  %>
    </div>
  </div>
  
  <div class="form-group">  
    <div class="col-sm-9">
      <%= f.submit (t :login), class: 'btn btn-primary btn-block' %>
    </div>
  </div>
  
<% end %>

<p>New user? <%= link_to 'Sign up now!', signup_path %></p>